<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="#000000">

    <GridLayout
        android:layout_width="352dp"
        android:layout_height="250dp"
        android:id="@+id/grid"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="C"
            android:id="@+id/clear"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#ffea00"
            android:onClick="clica"
            android:layout_alignTop="@+id/grid"
            android:layout_alignRight="@+id/campo"
            android:layout_alignEnd="@+id/campo" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/um"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/dois"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/tres"
            android:layout_row="2"
            android:layout_column="2"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/soma"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#fdffa200"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/quatro"
            android:layout_row="3"
            android:layout_column="0"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="5"
            android:id="@+id/cinco"
            android:layout_row="3"
            android:layout_column="1"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="6"
            android:id="@+id/seis"
            android:layout_row="3"
            android:layout_column="2"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/menos"
            android:layout_row="3"
            android:layout_column="3"
            android:background="#fdffa200"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="7"
            android:id="@+id/sete"
            android:layout_row="4"
            android:layout_column="0"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="8"
            android:id="@+id/oito"
            android:layout_row="4"
            android:layout_column="1"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="9"
            android:id="@+id/nove"
            android:layout_row="4"
            android:layout_column="2"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="/"
            android:id="@+id/div"
            android:layout_row="4"
            android:layout_column="3"
            android:background="#fdffa200"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="0"
            android:id="@+id/zero"
            android:layout_row="5"
            android:layout_column="0"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="."
            android:id="@+id/ponto"
            android:layout_row="5"
            android:layout_column="1"
            android:background="#04ff00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="="
            android:id="@+id/igual"
            android:layout_row="5"
            android:layout_column="2"
            android:background="#ffea00"
            android:onClick="clica"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="x"
            android:id="@+id/mult"
            android:layout_row="5"
            android:layout_column="3"
            android:background="#fdffa200"
            android:layout_above="@+id/grid"
            android:layout_alignRight="@+id/grid"
            android:layout_alignEnd="@+id/grid" />

    </GridLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:text="0"
        android:textSize="100px"
        android:textAlignment="viewEnd"
        android:id="@+id/campo"
        android:background="#000000"
        android:autoText="false"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
